# ============================================
# Facto Backend Services - Production Environment Variables
# ============================================
# Copy this file to .env and fill in your actual production values
# DO NOT commit .env file to version control

# ============================================
# Server Configuration
# ============================================
NODE_ENV=prod
PORT=3000

# ============================================
# Database Configuration (REQUIRED)
# ============================================
# MongoDB connection string
# Format: mongodb+srv://username:password@cluster.mongodb.net/databaseName?retryWrites=true&w=majority
MONGODB_URI=your_mongodb_connection_string_here

# ============================================
# JWT Authentication (REQUIRED)
# ============================================
# Secret key for JWT token signing (use a strong random string in production)
# Generate a secure key: openssl rand -base64 32
JWT_SECRET=your_strong_jwt_secret_key_here_minimum_32_characters
JWT_EXPIRES_IN=24h

# ============================================
# Razorpay Payment Gateway (REQUIRED)
# ============================================
# Get these from Razorpay Dashboard: https://dashboard.razorpay.com/
# Use LIVE keys for production, TEST keys for development
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret
RAZORPAY_WEBHOOK_SECRET=your_razorpay_webhook_secret

# ============================================
# Cloudinary File Storage (REQUIRED)
# ============================================
# Get these from Cloudinary Dashboard: https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Optional Cloudinary Settings (with defaults)
CLOUDINARY_BLOGS_FOLDER=blogs
CLOUDINARY_COURSE_THUMBNAILS_FOLDER=course_thumbnails
CLOUDINARY_COURSE_VIDEOS_FOLDER=course_videos
CLOUDINARY_THUMBNAIL_WIDTH=1280
CLOUDINARY_THUMBNAIL_HEIGHT=720
CLOUDINARY_VIDEO_TIMEOUT=180000
MAX_FILE_SIZE_MB=505

# ============================================
# Email Service Configuration
# ============================================
# Choose email service: 'sendgrid' or 'gmail'
EMAIL_SERVICE=sendgrid

# SendGrid Configuration (Recommended for production)
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@facto.org.in

# Gmail Configuration (Alternative)
# Use App Password, not regular password
GMAIL_USER=your_gmail@gmail.com
GMAIL_APP_PASSWORD=your_gmail_app_password

# Alternative email configuration
EMAIL_USER=your_email@example.com
EMAIL_PASSWORD=your_email_password
EMAIL_USE_PORT_465=true

# ============================================
# Twilio SMS Service (Optional)
# ============================================
# Get these from Twilio Dashboard: https://www.twilio.com/console
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_SERVICE_SID=your_twilio_service_sid
TWILIO_PHONE_NUMBER=your_twilio_phone_number
TWILIO_WHATSAPP_NUMBER=your_twilio_whatsapp_number

# ============================================
# Frontend URLs (REQUIRED for production)
# ============================================
# Frontend application URL (used in email links, etc.)
FRONTEND_URL=https://facto.org.in

# ============================================
# CORS Configuration
# ============================================
# Comma-separated list of allowed origins for production
# Example: https://facto.org.in,https://admin.facto.org.in,https://app.facto.org.in
CORS_ORIGIN=https://facto.org.in,https://www.facto.org.in,https://admin.facto.org.in

# ============================================
# Admin Configuration (Optional)
# ============================================
# Admin email address for receiving notifications (e.g., consultation requests)
ADMIN_EMAIL=facto.m.consultancy@gmail.com
# Admin phone number for SMS notifications
ADMIN_PHONE_NUMBER=+91xxxxxxxxxx

# ============================================
# Production Notes
# ============================================
# 1. All values marked as REQUIRED must be filled in for production
# 2. Use strong, unique values for JWT_SECRET (minimum 32 characters)
# 3. Use LIVE/Production keys for Razorpay (not test keys)
# 4. Ensure MongoDB connection string includes database name
# 5. Update FRONTEND_URL to your actual production domain
# 6. Configure CORS_ORIGIN with your production domains
# 7. Test email service before deploying to production
# 8. Keep this file secure and never commit .env to version control






